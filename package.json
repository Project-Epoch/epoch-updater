{
  "name": "epoch-updater",
  "productName": "Project Epoch Updater",
  "version": "1.1.0",
  "description": "The Game Client Updater for Project Epoch.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "Project Epoch",
    "email": "support@project-epoch.net"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/epoch"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "setupIcon": "./assets/epoch.ico",
            "title": "Project Epoch",
            "name": "ProjectEpochUpdater",
            "authors": "Project Epoch",
            "description": "The Game Client Updater for Project Epoch.",
            "exe": "Project Epoch Updater.exe",
            "setupExe": "epoch-installer.exe",
            "iconUrl": "https://cdn.project-epoch.net/media/updater/epoch.ico",
            "loadingGif": "./assets/loading.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {
            "name": "project-epoch-updater",
            "productName": "Project Epoch Updater",
            "genericName": "Game Client Updater",
            "description": "The Game Client Updater for Project Epoch.",
            "section": "games",
            "priority": "optional",
            "maintainer": "Project Epoch",
            "homepage": "https://www.project-epoch.net",
            "bin": "Project Epoch Updater",
            "icon": "./assets/epoch.ico",
            "categories": [
              "Game"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [
            "linux"
          ],
          "config": {
            "name": "project-epoch-updater",
            "productName": "Project Epoch Updater",
            "genericName": "Game Client Updater",
            "description": "The Game Client Updater for Project Epoch.",
            "license": "GPL-3.0",
            "homepage": "https://www.project-epoch.net",
            "bin": "Project Epoch Updater",
            "icon": "./assets/epoch.ico",
            "categories": [
              "Game"
            ]
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "sogladev",
              "name": "epoch-updater"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "devContentSecurityPolicy": "default-src * self blob: data: gap:; style-src * self 'unsafe-inline' blob: data: gap:; script-src * 'self' 'unsafe-eval' 'unsafe-inline' blob: data: gap:; object-src * 'self' blob: data: gap:; img-src * self 'unsafe-inline' https://cdn.project-epoch.net/ blob: data: gap:; connect-src self * 'unsafe-inline' blob: data: gap:; frame-src * self blob: data: gap:;",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron-forge/plugin-webpack": "^7.6.1",
    "@electron-forge/publisher-github": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@types/bootstrap": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "autoprefixer": "^10.4.4",
    "bootstrap": "^5.1.3",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.0.0",
    "electron": "34.0.1",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.12",
    "postcss-loader": "^4.2.0",
    "sass": "^1.49.10",
    "sass-loader": "^10.1.1",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@popperjs/core": "^2.11.4",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "electron-unhandled": "^4.0.1",
    "is-elevated": "^4.0.0",
    "md5-file": "^5.0.0",
    "node-downloader-helper": "^2.1.0",
    "update-electron-app": "^2.0.1"
  }
}
